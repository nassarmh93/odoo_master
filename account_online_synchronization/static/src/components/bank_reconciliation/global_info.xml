<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- display available balance on rec widget -->
    <t
        t-name="account_online_synchronization.BankRecGlobalInfo"
        t-inherit="account_accountant.BankRecGlobalInfo" t-inherit-mode="extension"
    >
        <xpath expr="//div[@t-if='props.journalId']/span[1]" position="attributes">
            <attribute name="class" remove="flex-fill" separator=" "/>
        </xpath>
        <xpath expr="//div[@t-if='props.journalId']/span[1]" position="after">
            <span
                class="pe-0 fw-bold fs-4 flex-fill text-start"
                t-if="props.journalAvailableBalanceAmount"
            >
                <span
                    class="btn pe-0 fw-bold flex-fill fs-5 text-danger"
                    t-esc="props.journalAvailableBalanceAmount"
                    t-on-click="actionOpenPendingBankStatementLines"
                    data-tooltip="Available balance with pending"
                />
            </span>
        </xpath>
    </t>
</templates>
