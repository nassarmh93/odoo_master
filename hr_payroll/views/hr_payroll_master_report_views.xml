<?xml version="1.0"?>
<odoo>
    <record id="hr_payroll_master_report_view_form" model="ir.ui.view">
        <field name="name">hr.payroll.master.report.view.form</field>
        <field name="model">hr.payroll.master.report</field>
        <field name="arch" type="xml">
            <form string="Master Report">
                <header>
                    <button name="action_generate_report" type="object" string="Generate Report XLSX" class="btn-primary" invisible="xlsx_file or not period_has_payslips"/>
                    <button name="action_generate_report" type="object" string="Generate Report XLSX" class="btn-secondary" invisible="not xlsx_file or not period_has_payslips"/>
                </header>
                <sheet>
                    <div role="alert" class="alert alert-warning text-center" invisible="period_has_payslips">
                        There are no eligible payslips for that period of time.
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="period_has_payslips" invisible="1"/>
                        <label for="date_from"/>
                        <div class="d-flex gap-1">
                            <field name="date_from" string="Period" class="w-auto"/>
                            -
                            <field name="date_to" class="w-auto"/>
                        </div>
                        <field
                            name="salary_rule_ids" widget="many2many_tags" placeholder="All rules will be included in the report"
                            context="{'search_default_head': True, 'list_view_ref': 'hr_payroll.hr_salary_rule_view_list_m2m'}"/>
                        <field name="xlsx_filename" invisible="1"/>
                        <field name="xlsx_file" filename="xlsx_filename" invisible="not xlsx_file"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_payroll_master_report_view_list" model="ir.ui.view">
        <field name="name">hr.payroll.master.report.view.list</field>
        <field name="model">hr.payroll.master.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="xlsx_filename" column_invisible="1"/>
                <field name="xlsx_file" filename="xlsx_filename" widget="binary"/>
            </list>
        </field>
    </record>

    <record id="action_hr_payroll_master_report" model="ir.actions.act_window">
        <field name="name">Master Report</field>
        <field name="res_model">hr.payroll.master.report</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
