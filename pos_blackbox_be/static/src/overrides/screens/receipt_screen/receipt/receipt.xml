<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="before">
            <t t-if="order.useBlackBoxBe()">
                <t t-if="order.receipt_type != 'NS' and order.receipt_type  != 'NR'">
                    <div class="pos-receipt-header"><bold>THIS IS NOT A VALID TICKET</bold></div>
                    <div class="pos-receipt-header"><bold>PRO FORMA</bold> <bold t-if="order.receipt_type  == 'PR'">REFUND</bold></div>
                </t>
                <t t-else="">
                    <div class="pos-receipt-header"><bold>VAT TICKET</bold></div>
                    <div class="pos-receipt-header"><bold t-if="order.receipt_type == 'NR'">REFUND</bold></div>
                </t>
                <br/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="inside">
            <t t-if="order.useBlackBoxBe()">
                <div>
                    Date: <t t-esc="order.blackbox_date"/>
                </div>
                <div>
                    Till: <t t-esc="order.config.name"/>
                </div>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('cashier')]" position="before">
            <t t-if="order.useBlackBoxBe() !== false">
                <t t-esc="order.company.street"/>
            </t>
        </xpath>
    </t>
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('after-footer')]" position="after">
            <t t-if="order.useBlackBoxBe()">
                <br/>
                <div style="font-size: 75%;">
                    <div>PLU hash: <t t-esc="order.blackbox_plu_hash"/></div>
                    <div>FDM ID: <t t-esc="order.blackbox_unique_fdm_production_number"/></div>
                    <div>Terminal ID: <t t-esc="order.config.id"/></div>
                    <div>D/H Terminal: <span><t t-esc="order.blackbox_date"/> <t t-esc="order.blackbox_time"/></span></div>
                    <div>POS version: <t t-esc="order.config.server_version"/></div>

                    <div>Control data</div>
                    <div>FDM ticket counters:<t t-esc="order.blackbox_ticket_counters"/></div>
                    <div>VSC ID: <t t-esc="order.blackbox_vsc_identification_number"/></div>
                    <div>FDM Identifier: <t t-esc="order.config.certified_blackbox_identifier"/></div>
                    <div>Ticket signature: <t t-esc="order.blackbox_signature"/></div>
                </div>
            </t>
        </xpath>
        <xpath expr="//t[@t-set-slot='orderline-children']" position="inside">
            <t t-if="order.useBlackBoxBe() and line.discount !== '0'">
                <div>
                    Old unit price:
                    <span>
                        <s>
                            <t t-esc="line.price_without_discount" /> / Units
                        </s>
                    </span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
