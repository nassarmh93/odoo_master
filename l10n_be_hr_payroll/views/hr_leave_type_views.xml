<?xml version="1.0" encoding='UTF-8' ?>
<odoo>
    <record id="l10n_be_hr_payroll_leave_form_inherit" model="ir.ui.view">
        <field name="name">l10n_be_hr_payroll.leave.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='configuration']" position="inside">
                <field name="l10n_be_no_consecutive_leaves_allowed" invisible="country_code != 'BE'" nolabel="1"/>
                <label for="l10n_be_no_consecutive_leaves_allowed" invisible="country_code != 'BE'"/>
            </xpath>
        </field>
    </record>
</odoo>
