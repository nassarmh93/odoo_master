<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_departure_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.departure.wizard.view.form.extend</field>
        <field name="model">hr.departure.wizard</field>
        <field name="inherit_id" ref="hr.hr_departure_wizard_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='info']" position="inside">
                <div invisible='not send_documents_enabled'><field name="send_hr_documents_access_link"/><label for="send_hr_documents_access_link"/></div>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <div class="alert alert-warning" role="alert" invisible="not warning_message">
                    <field name="warning_message" style="white-space: pre-wrap;"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
