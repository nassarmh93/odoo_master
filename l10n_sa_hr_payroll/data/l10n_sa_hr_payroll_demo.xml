        <field name="l10n_sa_number_of_days">23</field>
        <field name="contract_type_id" ref="hr.contract_type_permanent"/>
        <field name="date_start" eval="DateTime(DateTime.today().year-2,month=1,day=1)"/>
    </record>     
</odoo>
