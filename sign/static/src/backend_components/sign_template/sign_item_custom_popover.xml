<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sign.SignItemCustomPopover">
        <div class="popover" style="max-width: 25rem;">
            <div class="popover-header d-flex align-items-center justify-content-between">
                <span class="fw-bold" t-esc="props.header_title"/>
                <button type="button" title="Close" class="btn btn-default oi oi-close p-0" t-on-click="props.onClose"/>
            </div>
            <div class="popover-body">
                <div t-if="!['strikethrough', 'radio', 'checkbox'].includes(props.type)" class="clearfix o_popover_placeholder mb-3">
                    <label for="o_sign_name" class="form-label">Placeholder</label>
                    <input type="text" class="form-control o_input rounded-0" id="o_sign_name" t-att-value="state.placeholder" t-on-change="(e) => this.onChange('placeholder', e.target.value)"/>
                </div>
                <div t-if="props.type === 'selection'" class="mb-3">
                    <label for="o_sign_select_options_input" class="label">Options</label>
                    <div class="o_sign_selection_input_option" id="o_sign_select_options_input">
                        <textarea
                            placeholder="Enter options separated by Enter."
                            t-att-value="state.selectionOptionsText"
                            t-on-change="(ev) => this.onChangeSelectionOptions(ev.target.value)"
                            class="form-control"
                            rows="4"
                        />
                    </div>
                </div>
                <div t-if="props.type === 'radio'" class="mb-3">
                    <div class="o_field_widget" id="o_sign_select_radio_qty_input">
                        <label for="o_sign_select_radio_qty_input" class="form-label">Options</label>
                        <input type="number" inputmode="numeric" class="o_input form-control" t-att-value="state.num_options" t-att-min="2"
                        t-on-change="(e) => this.handleNumOptionsChange(e.target.value)"/>
                    </div>
                </div>
                <div t-if="showAlignment" class="o_sign_field_align_group mb-3">
                    <label class="form-label">Alignment</label>
                    <div class="btn-group w-100" role="group">
                        <button t-foreach="alignmentOptions" t-as="alignment" t-key="alignment.key" type="button" t-att-title="alignment.title" t-on-click="(e) => this.onChange('alignment', alignment.key)" class="btn btn-secondary">
                            <i t-attf-class="fa fa-align-{{alignment.key}} {{alignment.key === state.alignment ? 'active': ''}}"/>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="o_sign_required_field" t-att-checked="state.required" t-on-change="(e) => this.onChange('required', e.target.checked)" class="form-check-input"/>
                        <label class="form-check-label" for="o_sign_required_field">
                            Mandatory field
                        </label>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <button class="btn o_sign_validate_field_button btn-primary" t-on-click="onValidate">Save</button>
                    <button class="btn btn-secondary" t-on-click="props.onDelete">
                        <i class="fa fa-trash"/>
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
