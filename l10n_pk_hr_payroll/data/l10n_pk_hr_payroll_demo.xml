<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.demo_company_pk" model="res.company" forcecreate="1">
        <field name="name">My Pakistan Company</field>
        <field name="currency_id" ref="base.PKR"/>
        <field name="country_id" ref="base.pk"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="company_ids" eval="[(4, ref('base.demo_company_pk'))]"/>
    </record>

    <record id="base.user_demo" model="res.users">
        <field name="company_ids" eval="[(4, ref('base.demo_company_pk'))]"/>
    </record>

    <record id="marketing_department_pk" model="hr.department">
        <field name="name">Marketing</field>
        <field name="company_id" ref="base.demo_company_pk"/>
    </record>
    <record id="accounting_department_pk" model="hr.department">
        <field name="name">Admin</field>
        <field name="company_id" ref="base.demo_company_pk"/>
    </record>

    <record id="job_marketing_manager_pk" model="hr.job">
        <field name="name">Marketing Manager</field>
        <field name="department_id" ref="marketing_department_pk"/>
        <field name="company_id" ref="base.demo_company_pk"/>
    </record>
    <record id="job_accounting_manager_pk" model="hr.job">
        <field name="name">Accounting Manager</field>
        <field name="department_id" ref="accounting_department_pk"/>
        <field name="company_id" ref="base.demo_company_pk"/>
    </record>

    <record id="hr_employee_shahid_manzoor" model="hr.employee">
        <field name="name">Shahid Manzoor</field>
        <field name="job_id" ref="job_marketing_manager_pk"/>
        <field name="company_id" ref="base.demo_company_pk"/>
        <field name="gender">male</field>
        <field name="department_id" ref="marketing_department_pk"/>
        <field name="tz">Asia/Dubai</field>
    </record>
    <record id="hr_employee_shazia_imran" model="hr.employee">
        <field name="name">Shazia Imran</field>
        <field name="job_id" ref="job_accounting_manager_pk"/>
        <field name="country_id" ref="base.pk"/>
        <field name="company_id" ref="base.demo_company_pk"/>
        <field name="gender">female</field>
        <field name="department_id" ref="accounting_department_pk"/>
        <field name="tz">Asia/Karachi</field>
    </record>

    <record id="hr_contract_shahid_manzoor" model="hr.contract">
        <field name="name">Temporary Contract - Shahid Manzoor</field>
        <field name="department_id" ref="marketing_department_pk"/>
        <field name="employee_id" ref="hr_employee_shahid_manzoor"/>
        <field name="job_id" ref="job_marketing_manager_pk"/>
        <field name="wage">15000</field>
        <field name="state">open</field>
        <field name="hr_responsible_id" ref="base.user_demo"/>
        <field name="company_id" ref="base.demo_company_pk"/>
        <field name="date_start" eval="DateTime.today() + relativedelta(months=-4, days=-10)"/>
        <field name="contract_type_id" ref="hr.contract_type_temporary"/>
    </record>
    <record id="hr_contract_shazia_imran" model="hr.contract">
        <field name="name">Full-Time Contract - Shazia Imran</field>
        <field name="department_id" ref="accounting_department_pk"/>
        <field name="employee_id" ref="hr_employee_shazia_imran"/>
        <field name="job_id" ref="job_accounting_manager_pk"/>
        <field name="wage">20000</field>
        <field name="state">open</field>
        <field name="hr_responsible_id" ref="base.user_demo"/>
        <field name="company_id" ref="base.demo_company_pk"/>
        <field name="date_start" eval="DateTime(DateTime.today().year-3,month=2,day=25)"/>
        <field name="contract_type_id" ref="hr.contract_type_full_time"/>
    </record>     
</odoo>
