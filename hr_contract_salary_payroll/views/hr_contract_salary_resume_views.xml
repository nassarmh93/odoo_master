<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_salary_resume_view_form" model="ir.ui.view">
        <field name="name">hr.contract.salary.resume.view.form.inherit.hr.contract.salary.payroll</field>
        <field name="model">hr.contract.salary.resume</field>
        <field name="inherit_id" ref="hr_contract_salary.hr_contract_salary_resume_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="attributes">
                <attribute name="invisible">value_type not in ['payslip', 'contract']</attribute>
                <attribute name="required">value_type in ['payslip', 'contract']</attribute>
            </xpath>
        </field>
    </record>
</odoo>
