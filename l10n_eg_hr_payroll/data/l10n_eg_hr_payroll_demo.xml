<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.demo_company_eg" model="res.company" forcecreate="1">
        <field name="name">My Egyptian Company</field>
        <field name="currency_id" ref="base.EGP"/>
        <field name="country_id" ref="base.eg"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="company_ids" eval="[(4, ref('base.demo_company_eg'))]"/>
    </record>

    <record id="base.user_demo" model="res.users">
        <field name="company_ids" eval="[(4, ref('base.demo_company_eg'))]"/>
    </record>

    <record id="marketing_department_eg" model="hr.department">
        <field name="name">Marketing</field>
        <field name="company_id" ref="base.demo_company_eg"/>
    </record>
    <record id="accounting_department_eg" model="hr.department">
        <field name="name">Admin</field>
        <field name="company_id" ref="base.demo_company_eg"/>
    </record>

    <record id="job_marketing_manager_eg" model="hr.job">
        <field name="name">Marketing Manager</field>
        <field name="department_id" ref="marketing_department_eg"/>
        <field name="company_id" ref="base.demo_company_eg"/>
    </record>
    <record id="job_accounting_manager_eg" model="hr.job">
        <field name="name">Accounting Manager</field>
        <field name="department_id" ref="accounting_department_eg"/>
        <field name="company_id" ref="base.demo_company_eg"/>
    </record>

    <record id="hr_employee_abeer_ehab_abdullah" model="hr.employee">
        <field name="name">Abeer Ehab Abdullah</field>
        <field name="job_id" ref="job_marketing_manager_eg"/>
        <field name="country_id" ref="base.eg"/>
        <field name="company_id" ref="base.demo_company_eg"/>
        <field name="gender">female</field>
        <field name="department_id" ref="marketing_department_eg"/>
        <field name="tz">Africa/Cairo</field>
    </record>
    <record id="hr_employee_hany_ahmed_magdy" model="hr.employee">
        <field name="name">Hany Ahmed Magdy</field>
        <field name="job_id" ref="job_accounting_manager_eg"/>
        <field name="country_id" ref="base.eg"/>
        <field name="company_id" ref="base.demo_company_eg"/>
        <field name="gender">male</field>
        <field name="department_id" ref="accounting_department_eg"/>
        <field name="tz">Africa/Cairo</field>
    </record>

    <record id="hr_contract_abeer_ehab_abdullah" model="hr.contract">
        <field name="name">Temporary Contract - Abeer Ehab Abdullah</field>
        <field name="department_id" ref="marketing_department_eg"/>
        <field name="employee_id" ref="hr_employee_abeer_ehab_abdullah"/>
        <field name="job_id" ref="job_marketing_manager_eg"/>
        <field name="wage">35000</field>
        <field name="state">open</field>
        <field name="hr_responsible_id" ref="base.user_demo"/>
        <field name="company_id" ref="base.demo_company_eg"/>
        <field name="l10n_eg_housing_allowance">1000</field>
        <field name="l10n_eg_other_allowances">1000</field>
        <field name="date_start" eval="DateTime.today() + relativedelta(months=-4, days=-10)"/>
        <field name="contract_type_id" ref="hr.contract_type_temporary"/>
    </record>
    <record id="hr_contract_hany_ahmed_magdy" model="hr.contract">
        <field name="name">Full-Time Contract - Hany Ahmed Magdy</field>
        <field name="department_id" ref="accounting_department_eg"/>
        <field name="employee_id" ref="hr_employee_hany_ahmed_magdy"/>
        <field name="job_id" ref="job_accounting_manager_eg"/>
        <field name="wage">40000</field>
        <field name="state">open</field>
        <field name="hr_responsible_id" ref="base.user_demo"/>
        <field name="company_id" ref="base.demo_company_eg"/>
        <field name="l10n_eg_housing_allowance">1000</field>
        <field name="l10n_eg_other_allowances">1000</field>
        <field name="date_start" eval="DateTime(DateTime.today().year-3,month=2,day=25)"/>
        <field name="contract_type_id" ref="hr.contract_type_full_time"/>
    </record>     
</odoo>
