<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payrolladvice">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <p class="text-end my-0"> Made on <span t-out="time.strftime('%d-%m-%Y')"/></p>
                        <p class="text-end my-0"> Effective From <span t-out="o.l10n_in_effective_from.strftime('%d-%m-%Y')"/></p>
                        <p>To,</p>
                        <p>The Manager,</p>
                        <p><strong><span t-out="o.l10n_in_company_bank_id.bank_name"/></strong></p>
                        <p>Dear Sir/Madam,</p>
                        <p class="text-start">
                            <strong>Payment Advice from 
                                <span t-out="o.company_id.name"/>
                                <t t-if="o.l10n_in_neft">with NEFT</t>
                                <t t-else="">with Cheque No. 
                                    <span t-if="o.l10n_in_cheque_number" t-out="o.l10n_in_cheque_number"/>
                                    <span t-else="">XXXXXXXX</span>
                                </t> from <span t-out="get_month(current_date)['from_name']"/> to 
                                <span t-out="get_month(current_date)['to_name']"/>
                            </strong>
                        </p>
                    <p class="text-start">
                        <span>
                            Please proceed with transfer from account 
                            <span t-if="o.l10n_in_company_bank_id" t-out="o.l10n_in_company_bank_id.acc_number"/>
                            <span t-else="">XXXXXXXXX</span> for the employees listed in this document:
                        </span>
                    </p>
                        <table class="o_ignore_layout_styling table table-sm">
                            <thead>
                                <tr style="border-top: 1px solid black">
                                    <th>SI No.</th>
                                    <th>Employee</th>
                                    <th>Bank Account No.</th>
                                    <th>IFSC Code</th>
                                    <th>By salary</th>
                                    <th>C/D</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="report_details" t-value="line_ids"/>
                                <tr t-foreach="report_details['lines']" t-as="l">
                                    <td>
                                        <span t-out="l_index+1">.</span>
                                    </td>
                                    <td>
                                        <span t-out="l['name']"/>
                                    </td>
                                    <td>
                                        <span t-out="l['acc_no']"/>
                                    </td>
                                    <td>
                                        <span t-out="l['ifsc_code']"/>
                                    </td>
                                    <td>
                                        <span t-out="l['bysal']" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                    </td>
                                        <td>
                                        <span t-out="l['debit_credit']"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom: 1px solid black">
                                    <td colspan="2"/>
                                    <td>
                                        <strong>Total:</strong>
                                    </td>
                                    <td colspan="1"/>
                                    <td colspan="2">
                                        <strong><span t-out="report_details['total_bysal']" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/></strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <p>Yours Sincerely</p>
                        <p>For <span t-out="o.company_id.name"/></p>
                        <p class="mt32">Authorized Signature</p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
